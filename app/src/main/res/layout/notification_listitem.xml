<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_notification">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="center_vertical"
            android:gravity="center|bottom">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/notification_image"
                android:background="@drawable/ic_user_image"
                app:siRadius="6dp"
                app:siBorderWidth="2dp"
                app:siBorderColor="#000"
                app:siSquare="true"/>
            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/subject_title"
                 android:textColor="#000000"
                 android:textSize="13dp"
                 android:gravity="center"
                 android:text="Maths"/>-->
            <com.github.ivbaranov.mli.MaterialLetterIcon
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:id="@+id/letter_circle"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date_notification"
                android:textSize="12dp"
                android:gravity="end"
                android:layout_marginRight="5dp"
                android:textColor="#000000"
                android:text="08-10-2018"/>


                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="12dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="#b5b5b5"/>
           <TextView
            android:id="@+id/notification"
               android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5C5B5B"
            android:textSize="12dp"/>

               <TextView
                   android:visibility="gone"
                   android:id="@+id/id_Notification"
                   android:layout_marginTop="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </TextView>




            <TextView
                android:visibility="gone"
                android:id="@+id/letter_n"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title">

            </TextView>


        </LinearLayout>

    </LinearLayout>




    </android.support.v7.widget.CardView>
</LinearLayout>

