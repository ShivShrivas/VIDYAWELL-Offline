<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text_empname_student"
            android:layout_weight="1"
            android:text="From Date"
            android:textSize="14dp"
            android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/from_leave_date_student"
            android:layout_weight="1"
            android:text="From Date"
            android:textColor="#000"
            android:textSize="14dp"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/to_leave_date_student"
            android:layout_weight="1"
            android:text="To Date"
            android:textColor="#000"
            android:textSize="14dp"
            android:gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/formdate_student"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="01-01-2019"
            android:textSize="14dp"
            android:textColor="#047c5e"
            android:layout_marginStart="0dp"/>
        <TextView
            android:id="@+id/todate_student"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="05-01-2019"
            android:textSize="14dp"
            android:gravity="right"
            android:textColor="#047c5e"
            />
    </LinearLayout>

        <TextView
            android:id="@+id/txt_reason"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Reason"
            android:textColor="#000"
            android:textSize="14dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <TextView
            android:id="@+id/reason_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abc"
             />
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txt_remark_student"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Remark"
            android:textColor="#AD0202"
            android:textSize="14dp"/>
        <TextView
            android:padding="0dp"
            android:id="@+id/remarks_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abcdefgkl"/>
    </LinearLayout>

        <TextView
            android:visibility="gone"
            android:padding="2dp"
            android:id="@+id/application_id_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Abcdefgkl"/>
        <TextView
            android:visibility="gone"
            android:padding="2dp"
            android:id="@+id/leave_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Abcdefgkl"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:id="@+id/status_student"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:textColor="#fff"
        android:text="Status"
        android:background="@color/colorPrimary"/>
</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>