<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homework_topic_notification_submit_layout"
    android:background="#fff"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="3dp"
        android:focusable="false"
        android:background="#ffffff"
        android:focusableInTouchMode="false"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">




            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stu_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginLeft="10dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:text="Ram"
                    android:textSize="12dp">
                </TextView>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/stu_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginTop="1dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:text="1st"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp">
                </TextView>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_subject_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginTop="1dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:text="Hindi"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp">
                </TextView>

                <TextView
                    android:id="@+id/txt_topic_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginTop="1dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:text="Hindi"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp">
                </TextView>


                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_tran_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginTop="1dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:text="Hindi"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp">
                </TextView>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_vouch_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginTop="1dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:text="Hindi"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp">
                </TextView>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/IsSubmitted_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginTop="1dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:text="Hindi"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp">
                </TextView>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/SendNotification_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginTop="1dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:text="Hindi"
                    android:layout_marginLeft="10dp"
                    android:textSize="10dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="0dp">
                    <Button
                        android:textAllCaps="false"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/homework_chekd"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Submitted"
                        android:textSize="8dp">
                    </Button>
                    <Button
                        android:textAllCaps="false"
                        android:layout_marginRight="5dp"
                        android:id="@+id/homework_unchekd"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Not Submitted"
                        android:textSize="8dp">
                    </Button>
                </LinearLayout>
            </LinearLayout>

          <!--  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="0dp">
                    <Button
                        android:layout_marginLeft="5dp"
                        android:id="@+id/homework_chekd"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"

                        android:textColor="#fff"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="Checked"
                        android:textSize="10dp">
                    </Button>

                </LinearLayout>
            </LinearLayout>-->
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

