<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:id="@+id/layout_staff">

    <androidx.cardview.widget.CardView
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="7dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView

                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status_meeting"
                android:text="On Call..."
                android:textStyle="italic|bold"
                android:textColor="#1d1d1d"
                android:layout_marginRight="10dp"
                android:gravity="right" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_visiter_bigimage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:transitionName="@string/activity_image_trans"

                app:civ_border_color="#ffffff"
                app:civ_border_width="0dp" />






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

           <!-- <View
                android:layout_marginLeft=".6dp"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:background="@color/colorfooter"/>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_vistorcode"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />


                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/visitor_status"
                     android:textSize="13dp"
                     android:gravity="center"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/HOWUKNOWs"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/AnyReference"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/VisitTypes"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/EmailId"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TotalPassMember"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/OfficeEmail"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/visitor_image"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/V_address"
                    android:gravity="center"
                    android:visibility="gone"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="0dp" >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/topic1"
                        android:layout_weight=".5"
                        android:textSize="12dp"
                        android:textColor="#292929"
                        android:text="Name :"
                        android:focusable="false"
                        android:focusableInTouchMode="false">
                    </TextView>

                    <TextView
                        android:id="@+id/topic4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:textSize="12dp"
                        android:textColor="#292929"
                        android:text="Company :"
                        android:focusable="false"
                        android:focusableInTouchMode="false">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/topic2"
                        android:layout_weight=".4"
                        android:textSize="12dp"
                        android:textColor="#292929"
                        android:text="Mobile     :"
                        android:focusable="false"
                        android:focusableInTouchMode="false">
                    </TextView>
                    <TextView
                        android:id="@+id/topic3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:textSize="12dp"
                        android:textColor="#292929"
                        android:text="Reference :"
                        android:focusable="false"
                        android:focusableInTouchMode="false">
                    </TextView>
                    <TextView
                        android:id="@+id/topic14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".4"
                        android:textSize="12dp"
                        android:textColor="#292929"
                        android:text="Purpose :"
                        android:focusable="false"
                        android:focusableInTouchMode="false">
                    </TextView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="0dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="Abhishek"
                        android:id="@+id/visiter_names"
                        android:focusable="false"
                        android:textSize="12dp"
                        android:focusableInTouchMode="false">

                    </TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="Mca"
                        android:textSize="12dp"
                        android:id="@+id/visiter_company"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="8886548521"
                        android:id="@+id/visiter_mobile"
                        android:textSize="12dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="History"
                        android:textSize="12dp"

                        android:id="@+id/visiter_reference"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="technical support"
                        android:textSize="12dp"
                        android:maxLines="2"
                        android:id="@+id/visiter_purpose"
                        android:focusable="false"
                        android:focusableInTouchMode="false">

                    </TextView>


                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".9"
                android:orientation="vertical"
                android:gravity="top"
                android:layout_marginRight="0dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/url"
                    android:visibility="gone"/>

              <!--  <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/teachres_status"
                    android:background="@drawable/ic_present"
                    android:focusable="false"
                    android:focusableInTouchMode="false">

                </Button>-->
                <Button
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/arrow"
                    android:background="@drawable/ic_proceed_arrow"
                    android:focusable="false"
                    android:layout_marginRight="5dp"
                    android:focusableInTouchMode="false">

                </Button>
            </LinearLayout>
        </LinearLayout>

             <View

                 android:layout_width="match_parent"
                 android:layout_height="8dp"
                 android:background="@color/colorfooter"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

