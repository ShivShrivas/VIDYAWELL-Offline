<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#ffffff"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

<!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:id="@+id/image_deleteproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:src="@drawable/ic_delete">


                </ImageView>

            </LinearLayout>
-->


            <WebView
                android:layout_marginTop="5dp"
                android:id="@+id/staff_image_vedio"
                android:layout_width="match_parent"
                android:background="@drawable/video_play_icon"
                android:layout_height="220dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:visibility="gone"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="9dp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:orientation="horizontal">


                <LinearLayout
                    android:visibility="visible"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Time -"/>

                    <TextView
                        android:id="@+id/txt_time"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                  <!--  <TextView
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Time -"/>

                    <TextView
                        android:id="@+id/txt_time"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>-->
                </LinearLayout>

                <LinearLayout
                    android:gravity="end"
                    android:layout_weight="1"
                    android:id="@+id/share_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_deleteproduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:src="@drawable/ic_delete"/>




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/full_screen"
                    android:gravity="end"
                    android:layout_weight="0"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_switch_to_full_screen_button"/>


                </LinearLayout>


            </LinearLayout>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_title"
                android:padding="5dp"
                android:gravity="start"
                android:textStyle="bold"
                android:textColor="#2d2d2d"
                android:textSize="12dp" />

            <LinearLayout
                android:id="@+id/layout_save_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<TextView
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_outline"
                    android:gravity="center"
                    android:text="">

                </TextView>-->
            <Button
                android:id="@+id/save_time"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:background="#40C4FF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Video">

            </Button>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_description"
                android:gravity="start"
                android:maxLines="1"
                android:visibility="gone"
                android:textSize="9dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transection_idd"
                android:visibility="gone"
                android:textSize="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/approved_id"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/video_approve_time"
                android:visibility="gone" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageurl_id"
                android:visibility="gone"
                android:textSize="10dp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>