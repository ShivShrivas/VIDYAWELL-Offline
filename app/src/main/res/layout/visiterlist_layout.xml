<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    android:id="@+id/layout_visit">

    <LinearLayout
        android:id="@+id/layout_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="15dp"
                android:text="Date"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="20dp"
                android:id="@+id/date_text"
                android:textStyle="bold"
                android:text="20-11-2018"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_small_calendar"
            android:orientation="vertical">

            <!-- <android.support.v7.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 app:cardCornerRadius="0dp"
                 android:layout_margin="5dp"
                 app:cardElevation="0dp">-->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:id="@+id/layout_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Text_Datev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#e44821"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="13"/>
                <TextView
                    android:id="@+id/text_monthnamev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#027fd9"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:text="Nov"/>
            </LinearLayout>

            <!--  </android.support.v7.widget.CardView>-->


        </LinearLayout>


    </LinearLayout>

    <ListView
        android:padding="7dp"
        android:id="@+id/visiter_list"
        android:scrollbars="none"
        android:dividerHeight="0dp"
        android:divider="@color/backgroundcolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
