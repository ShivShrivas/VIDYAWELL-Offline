<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layout_teachers">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight=".1"
            android:orientation="vertical">




            <com.github.siyamed.shapeimageview.RoundedImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/teachers_image"
                app:siRadius="6dp"
                android:background="@drawable/ic_user_image"
                app:siBorderWidth="2dp"
                app:siBorderColor="#000"
                app:siSquare="true"/>
           <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subject_title"
                android:textColor="#000000"
                android:textSize="13dp"
                android:gravity="center"
                android:text="Maths"/>-->


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_marginLeft="10dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/topic"
                android:layout_weight=".5"
                android:textSize="12dp"
                android:textColor="#000000"
                android:text="Name :"
                android:visibility="gone">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="Abhishek"
                android:textColor="#000000"
                android:textSize="12dp"
                android:id="@+id/teachers_names">

            </TextView>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="0dp"
                android:layout_marginLeft="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:textSize="12dp"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:text="Qulification:">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="Mca"
                    android:textColor="#383838"
                    android:textSize="12dp"
                    android:id="@+id/contact_number">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history"
                    android:layout_weight=".4"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:text="Subject :">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="History"
                    android:textColor="#383838"
                    android:textSize="12dp"
                    android:id="@+id/subject_history">

                </TextView>



            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobile_number"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emloyee_code"
                android:visibility="gone"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/designation"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_image_gone"
                android:visibility="gone"/>


            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/teachres_call"
                android:visibility="invisible"
                android:background="@drawable/call">
        </Button>
            <TextView
                android:id="@+id/msg_count"
                android:layout_marginLeft="2dp"
                android:padding="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="20"
                android:visibility="gone"
                android:textSize="9dp"
                android:gravity="center"
                android:textColor="#ffffff"/>

            <ImageView
                android:id="@+id/arrow"
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/ic_proceed_arrow"/>

        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/TeacherId"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    </LinearLayout>

