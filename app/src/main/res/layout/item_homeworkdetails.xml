<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/txt_trans_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>



    <TextView
        android:id="@+id/txt_IsHomeworkSubmitted_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:padding="3dp">

        <TextView
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/class_homework"
            android:textSize="12dp"
            android:textColor="#000"
            android:text="1"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stu_name_homework"
            android:textSize="10dp"
            android:singleLine="true"
            android:textColor="#000"
            android:text="Ashish"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_date"
            android:textSize="10dp"
            android:singleLine="true"

            android:textColor="#000"
            android:text="6/15/2020"/>



        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_submit"
            android:textSize="10dp"
            android:singleLine="true"
            android:textColor="#000"
            android:text="Submitted"/>

        <ImageView
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/imageview_attachemnt"/>


        <ImageView
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/img_remark"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="-3dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">


        <TextView
            android:id="@+id/txt_roll_no"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:singleLine="true"
            android:textColor="#000"
            android:text="Roll No: 1234"/>








    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">



        <TextView
            android:id="@+id/txt_fother_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:singleLine="true"
            android:textColor="#000"
            android:text="Father: XYZ"/>








    </LinearLayout>

</LinearLayout>