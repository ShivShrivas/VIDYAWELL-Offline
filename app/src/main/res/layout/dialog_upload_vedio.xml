<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/dialog_layout_vedio"
    android:background="#fff">




    <EditText
        android:id="@+id/txt_write"
        android:drawablePadding="15dp"
        android:textSize="10dp"
        android:paddingLeft="5dp"
        android:hint="Enter The Video Link"
        android:background="@drawable/bg_outline"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>


    <LinearLayout
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:id="@+id/layout_cal_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="11dp"
                android:text="Video End Date"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="10dp"
                android:singleLine="true"
                android:id="@+id/date_text_video"
                android:textStyle="bold"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_small_calendar"
            android:orientation="vertical">

            <!-- <android.support.v7.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 app:cardCornerRadius="0dp"
                 android:layout_margin="5dp"
                 app:cardElevation="0dp">-->
            <LinearLayout
                android:layout_marginTop="8dp"
                android:id="@+id/layout_calendar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Text_Datev_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#e44821"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:text=""/>
                <TextView
                    android:id="@+id/text_monthnamev_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#027fd9"
                    android:textSize="8dp"
                    android:gravity="center"
                    android:text=""/>
            </LinearLayout>

            <!--  </android.support.v7.widget.CardView>-->


        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|center"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_weight="1.1">


        <TextView
            android:id="@+id/button_cancel"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button_submitcode"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/button_submitcode"
            android:gravity="end"
            android:textColor="#7c7c7c"
            android:text="CANCEL" />


        <TextView
            android:layout_marginEnd="20dp"
            android:id="@+id/button_submitcode"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:textColor="#1895f4"
            android:text="SUBMIT" />

    </LinearLayout>

</LinearLayout>