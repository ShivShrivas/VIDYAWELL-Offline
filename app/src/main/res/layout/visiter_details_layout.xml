<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_visitdetails"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/main_visiter_big_g"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:transitionName="@string/activity_image_trans"

                app:civ_border_color="#ffffff"

                app:civ_border_width="5dp" />



            <TextView
                android:id="@+id/visiter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Abhishek Kumar"
                android:textColor="#fff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/visiter_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Abc124@gmail.com"
                android:textColor="#fff"
                android:textSize="9dp" />
            <TextView
                android:id="@+id/visiter_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="9095956585"
                android:textColor="#fff"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/visiter_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Android Studio tells you with a pop-up, or you can"
                android:textColor="#fff"
                android:textSize="9dp" />

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight=".9"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="7dp"
                        app:cardElevation="7dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:layout_weight="1">

                                <TextView
                                    android:textSize="13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:text="Referenced By"/>

                                <TextView
                                    android:maxLines="3"
                                    android:textSize="13dp"
                                    android:id="@+id/refrence_by"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sanjay SinghSanjay SinghSanjay Singh"/>


                                <TextView
                                    android:layout_marginTop="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:textSize="13dp"
                                    android:text="Official Email"/>

                                <TextView
                                    android:id="@+id/purpose_ofcmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="3"
                                    android:textSize="13dp"
                                    android:text="Android you with a pop-u"/>

                                <TextView
                                    android:textSize="13dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:text="Purpose of Meeting"/>

                                <TextView
                                    android:textSize="13dp"
                                    android:id="@+id/purpose_v"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:maxLines="4"
                                    android:text="As nvailable, Android Studio tells you with a pop-you with a pop-u"/>


                            </LinearLayout>
   <View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="#dfdfdf">

   </View>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:layout_weight="1">

                                <TextView
                                    android:textSize="13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:text="Number Of Person"/>

                                <TextView
                                    android:textSize="13dp"
                                    android:id="@+id/number_person"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"/>

                                <TextView
                                    android:textSize="13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:layout_marginTop="15dp"
                                    android:text="Company Name"/>

                                <TextView
                                    android:maxLines="3"
                                    android:textSize="13dp"
                                    android:id="@+id/comp_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BSN Infotech Pvt. Ltd."/>

                                <TextView
                                    android:textSize="13dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:layout_marginTop="15dp"
                                    android:text="Visit Type"/>

                                <TextView
                                    android:maxLines="3"
                                    android:textSize="13dp"
                                    android:id="@+id/visit_type"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="">

                                </TextView>                    </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>



            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:layout_weight="1.2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#efeded"
                    android:padding="5dp"
                    android:textSize="14dp"
                    android:gravity="start|top"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                    android:hint="Enter Remarks"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="5dp"
                android:orientation="horizontal">


                     <androidx.appcompat.widget.AppCompatButton
                         android:id="@+id/button_reject"
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:text="Reject"
                         android:textColor="#fff"
                         android:background="@drawable/round_buttons"
                         android:layout_height="match_parent" />




                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_waiting"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="On Wait"
                    android:background="@drawable/waiting_button"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_walking"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Walk In"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/walkin_button"
                    android:textColor="#fff"
                    android:layout_height="match_parent" />




            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
